{
  "name": "fe-school-backend",
  "version": "1.0.0",
  "description": "An app for managing music tracks.",
  "main": "dist/grpc-server.js",
  "scripts": {
    "start": "ts-node src/grpc-server.ts",
    "dev:grpc": "nodemon --watch 'src/**/*.ts' --exec npx ts-node src/grpc-server.ts",
    "dev:proxy": "nodemon --watch 'src/**/*.ts' --exec npx ts-node src/grpc-web-proxy.ts",
    "dev:ws": "nodemon --watch 'src/**/*.ts' --exec npx ts-node src/ws-server.ts",
    "build": "tsc",
    "lint": "eslint ../.. --ext ts,tsx --report-unused-disable-directives",
    "typecheck": "tsc --noEmit",
    "test": "vitest run src/__tests__/health.test.ts",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ci": "vitest run --reporter=verbose",
    "bd:reset": "rm -rf ./data && cp -r ./data-initial ./data",
    "seed": "ts-node src/seed.ts",
    "seed:prod": "node dist/seed.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@connectrpc/connect": "^2.0.2",
    "@connectrpc/connect-express": "^2.0.2",
    "@connectrpc/connect-web": "^2.0.2",
    "@grpc/grpc-js": "^1.13.4",
    "@grpc/proto-loader": "^0.7.15",
    "@types/node": "^22.13.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "dotenv-expand": "^12.0.1",
    "express": "^5.1.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@bufbuild/protoc-gen-connect-es": "^0.13.0",
    "@bufbuild/protoc-gen-es": "^1.10.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/supertest": "^6.0.2",
    "@vitest/coverage-v8": "^3.0.7",
    "protobuf-compiler": "^1.0.2",
    "protoc-gen-grpc-js": "^0.4.0",
    "protoc-gen-ts": "^0.8.7",
    "supertest": "^7.0.0",
    "ts-proto": "^2.7.5",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": ">=v20.13.1",
    "npm": ">=v10.5.2"
  }
}
